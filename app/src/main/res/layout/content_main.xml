<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="#fff"
            android:paddingBottom="3dp"
            android:scrollbars="none"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <include
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/filiper"
                    layout="@layout/activity_imagehorscroll"

                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"/>

                <RelativeLayout
                    android:layout_below="@+id/filiper"
                    android:id="@+id/catogaryDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="#f1f1f1"

                    >
                    <TextView
                        android:id="@+id/catTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif"
                        android:text="Shop By Cuisine"
                        android:textColor="#000000"
                        />
                    <HorizontalScrollView
                        android:id="@+id/horizontalScrlView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/catTitle"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:scrollbars="none"
                        android:layout_marginLeft="3dp"
                        android:background="#f1f1f1"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:paddingTop="2dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/indian"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/indianicon"/>
                                <TextView
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:textSize="15sp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="  Indian"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:paddingTop="2dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/italian"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/italianicon"/>
                                <TextView
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:textSize="15sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="       Italian"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:paddingTop="2dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/mexican"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/mexicanicon"/>
                                <TextView
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:textSize="15sp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mexican"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:paddingTop="2dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/american"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/americanicon"/>
                                <TextView
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:textSize="15sp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" American"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:paddingTop="2dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/local"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/local"/>
                                <TextView
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:textSize="15sp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Local"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:paddingTop="2dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/chinese"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/chineseicon"/>
                                <TextView
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:textSize="15sp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chinese"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:paddingTop="2dp"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/beverages"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/beverages"/>
                                <TextView
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:textSize="15sp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Beverages"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/catTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="160dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:fontFamily="sans-serif"
                        android:text="Shop By Category"
                        android:textColor="#000000"/>

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrlView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/catTitle"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="180dp"
                        android:background="#f1f1f1"
                        android:paddingLeft="3dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:scrollbars="none"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:orientation="vertical"
                                android:paddingTop="2dp">

                                <ImageView
                                    android:id="@+id/starters"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/starters" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginTop="15dp"
                                    android:text="  Starters"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical"
                                android:paddingTop="2dp">

                                <ImageView
                                    android:id="@+id/soups"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/soups" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginTop="15dp"
                                    android:text="       Soups"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical"
                                android:paddingTop="2dp">

                                <ImageView
                                    android:id="@+id/maincourse"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/rice" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginTop="15dp"
                                    android:text=" Main Course"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:orientation="vertical"
                                android:paddingTop="2dp">

                                <ImageView
                                    android:id="@+id/salads"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/salads" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginTop="15dp"
                                    android:text="Salads"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:orientation="vertical"
                                android:paddingTop="2dp">

                                <ImageView
                                    android:id="@+id/deserts"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/deserts" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginTop="15dp"
                                    android:text="Deserts"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </HorizontalScrollView>


                </RelativeLayout>


            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>